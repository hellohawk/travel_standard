<% if user_signed_in? %>
  <% if upload.like_user(current_user.id) %>
    <%= button_to upload_like_path(like, upload_id: upload.id), method: :delete, id: "like-button", remote: true do %>
      <%= image_tag("icon_red_heart.svg") %>
      <span>
        <%= upload.like_count %>
      </span>
    <% end %>
  <% else %>
    <%= button_to upload_likes_path(upload), id: "like-button", remote: true do %>
    <%= image_tag("icon_heart.svg") %>
      <span>
        <%= upload.like_count %>
      </span>
    <% end %>
  <% end %>
<% else %>
  <% = image_tag("icon_heart.svg") %>
    <span>
      <%= upload.like_count %>
    </span>
<% end %>