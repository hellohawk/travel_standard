<!DOCTYPE html>
<html>
  <head>
    <title>Travel_standard</title>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
    <!-- コレがないと読み込めない -->
    <%= include_gon %>
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    <%= javascript_include_tag 'application' ,'data-turbolinks-track' => true %>
<!-- コレがなくても読み込める -->
    <%= javascript_include_tag "//www.google.com/jsapi", "chartkick" %>
    <script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBZfcHVxgJkgkBJghbwE7Q5xFhhOdzc6JQ&callback=initMap"
  type="text/javascript"></script>

    <%= csrf_meta_tags %>


  </head>

  <body>
   <header class="header">
    <div class="header__bar row">
      <h1 class="grid-6"><a href="/">Travel_standard</a></h1>
      <% if user_signed_in? %>
        <div class="user_nav grid-6">
          <span><%= current_user.nickname %>
            <ul class="user__info">
              <li>
                <a href="/users/<%= current_user.id %>">マイページ</a>
                <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
              </li>
            </ul>
          </span>
          <a class="post" href="/uploads/new">投稿する</a>
        </div>
      <% else %>
        <div class="grid-6">
          <%= link_to "ログイン", new_user_session_path, :class => 'post' %>
          <%= link_to "新規登録", new_user_registration_path, :class => 'post' %>
        </div>
      <% end %>
    </div>
   </header>

  <%= yield %>

  <footer>
      <p>
        Copyright Travel_standard.
      </p>
  </footer>

  </body>
</html>
